@model HomeDetailsViewModel


@{
    ViewBag.Title = "Products Details";
    var photoPath = "~/Images/" + (Model.Product.PhotoPath ?? "new.jpeg");
}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Product.Name</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="@photoPath" asp-append-version="true" />

                <h4>Product ID : @Model.Product.Id</h4>
                <h4>Category: @Model.Product.Category</h4>
                <h4>Description : @Model.Product.Description</h4>


            </div>

            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="index" class="btn btn-primary">Back</a>
               <a asp-action = "edit" asp-controller ="home" 
                     asp-route-id ="@Model.Product.Id" class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>

            </div>
        </div>
    </div>
</div>